{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "noEmit": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "outDir": "build/ts",
        "declaration": true,
        "declarationDir": "build/lib",
    },
    "exclude": ["build", "node_modules"]
}